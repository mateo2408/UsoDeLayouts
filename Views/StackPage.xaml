<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CisnerosM_UsodeLayouts.Views.StackPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Mateo"
                   FontSize="80"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
            <BoxView
                   HeightRequest="8"
                   Opacity="0"/>
            <Label Text="Cisneros"
                   FontSize="65"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
            <BoxView
                   HeightRequest="8"
                   Opacity="0"/>
            <Label Text="Erazo"
                   FontSize="55"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
            <BoxView
                   HeightRequest="8"
                   Opacity="0"/>
            <Label Text="#InitisanaParaTodaLaVida"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
            <BoxView
                   HeightRequest="16"
                   Opacity="0"/>
            <Button x:Name="ToFlex" 
                    Text="Ir a Flex" 
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" 
                    Clicked="ToFlex_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>